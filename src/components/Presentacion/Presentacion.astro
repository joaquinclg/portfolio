---
import contacts from '@/data/contacts'
---

<section class="w-full relative overflow-hidden min-h-screen">
  <div class="absolute inset-0 bottom-1/2 h-full w-full [filter:blur(120px)] [background-image:linear-gradient(to_bottom,#2c384c,transparent_30%)]"></div>
  <div class="w-full max-w-screen-xl mx-auto px-10 relative">
    <div class="flex items-center h-screen">
      <div class="flex flex-col">
        <span class="text-base text-slate-200" style="font-size:clamp(14px, 5vw, 16px);">Hola, soy</span>
        <h1 class="bg-gradient-to-r from-white via-sky-200 to-sky-200 bg-clip-text font-bold text-transparent" style="font-size:clamp(45px, 8vw, 72px);">
          Joaquin Lucero
        </h1>
        <h2 class="w-auto max-w-[50ch] text-lg font-semibold text-slate-100 md:text-xl [&>strong]:font-semibold">
          <strong class="text-sky-200">Desarrollador Front-End argentino</strong> y actualmente estoy participando del proyecto Oracle ONE.
        </h2>
        <div class="">
          <ul class="mt-10 flex gap-5">
            {
              contacts.allContacts.map((contact) => (
                <li>
                  <a
                    href={contact.link}
                    rel="noopener noreferrer"
                    target="_blank"
                    class="flex items-center gap-2 fill-slate-400 text-sm font-normal text-slate-400 transition-all duration-300 hover:fill-white hover:text-white"
                  >
                    <span class="w-6" set:html={contact.icon} />
                    <h4 class="text-center">{contact.name}</h4>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>